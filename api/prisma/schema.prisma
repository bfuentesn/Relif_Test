generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        Int       @id @default(autoincrement())
  name      String
  rut       String    @unique
  email     String?   @unique
  phone     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  debts     Debt[]
  messages  Message[]

  @@index([name])
  @@index([rut])
}

model Message {
  id        Int      @id @default(autoincrement())
  text      String
  role      Role
  sentAt    DateTime
  clientId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([clientId, sentAt])
}

model Debt {
  id          Int      @id @default(autoincrement())
  institution String
  amount      Int
  dueDate     DateTime
  clientId    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([clientId])
}

model AssistantConfig {
  id                     Int      @id @default(autoincrement())
  name                   String
  tone                   String
  language               String
  brands                 String[]
  models                 Json
  branches               String[]
  messageLengthMin       Int
  messageLengthMax       Int
  signature              String
  useEmojis              Boolean
  additionalInstructions String?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}

enum Role {
  client
  agent
}
